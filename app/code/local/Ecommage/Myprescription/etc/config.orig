<?xml version="1.0"?>
<config>
    <modules>
        <Ecommage_Myprescription>
            <version>0.1.1</version>    <!-- Version number of your module -->
        </Ecommage_Myprescription>
    </modules>
    <admin>
        <routers>
            <myprescription>
                <use>admin</use>
                <args>
                    <module>Ecommage_Myprescription</module>
                    <frontName>myprescription</frontName>
                </args>
            </myprescription>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <ecommage_myprescription>
                    <file>ecommage_myprescription.xml</file>
                </ecommage_myprescription>
            </updates>
        </layout>
    </adminhtml>
    <frontend>
        <events>
            <checkout_cart_product_add_after>
                <observers>
                    <myprescription_remove_items>
                        <class>Ecommage_Myprescription_Model_Observer</class>
                        <method>modifyPrice</method>
                    </myprescription_remove_items>
                </observers>
            </checkout_cart_product_add_after>
            <sales_quote_add_item>
                <observers>
                    <myprescription_update_price>
                        <class>Ecommage_Myprescription_Model_Observer</class>
                        <method>modifyPrice</method>
                    </myprescription_update_price>
                </observers>
            </sales_quote_add_item>
        </events>

        <routers>
            <myprescription>
                <use>standard</use><!-- for all user -->
                <args>
                    <module>Ecommage_Myprescription</module><!-- using on this module -->
                    <frontName>myprescription</frontName><!--on link-->
                </args>
            </myprescription>
        </routers>
        <!-- khai bao layout -->
        <layout>
            <updates>
                <myprescription>
                    <file>myprescription.xml</file>
                </myprescription>
            </updates>
        </layout>
    </frontend>
    <global>
        <!--Declare Events-->
        <events>
            <sales_quote_remove_item>
                <observers>
                    <myprescription_remove_items>
                        <class>Ecommage_Myprescription_Model_Observer</class>
                        <method>removeQuoteItem</method>
                    </myprescription_remove_items>
                </observers>
            </sales_quote_remove_item>
        </events>
        <!--Declare Models-->
        <models>
            <ecommage_myprescription>
                <class>Ecommage_Myprescription_Model</class>
                <resourceModel>myprescription_mysql4</resourceModel>
            </ecommage_myprescription>
            <myprescription_mysql4>
                <class>Ecommage_Myprescription_Model_Mysql4</class>
                <entities>
                    <myprescription>
                        <table>ecommage_myprescription_register_repeat</table>
                    </myprescription>
                </entities>
            </myprescription_mysql4>
            <catalog>
                <rewrite>
                    <layer>Ecommage_Myprescription_Model_Catalog_Layer</layer>
                </rewrite>
            </catalog>
        </models>
        <!--Decalare Reources-->
        <resources>
            <myprescription_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </myprescription_read>
            <myprescription_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </myprescription_write>
            <ecommage_myprescription_setup>
                <setup>
                    <module>Ecommage_Myprescription</module>
                    <class>Ecommage_Myprescription_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ecommage_myprescription_setup>
            <ecommage_myprescription_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </ecommage_myprescription_write>
            <ecommage_myprescription_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </ecommage_myprescription_read>
        </resources>
        <blocks>
            <myprescription>
                <class>Ecommage_Myprescription_Block</class>
            </myprescription>
            <adminhtml>
                <rewrite>
                    <sales_order_grid>Ecommage_Myprescription_Block_Adminhtml_Sales_Order_Grid</sales_order_grid>
                </rewrite>
            </adminhtml>
            <checkout>
                <rewrite>
                    <onepage_payment_methods>Ecommage_Myprescription_Block_Payment_Form_Container</onepage_payment_methods>
                </rewrite>
            </checkout>
        </blocks>
        <helpers>
            <myprescription>
                <class>Ecommage_Myprescription_Helper</class>
            </myprescription>
        </helpers>
    </global>
    <crontab>
        <jobs>
            <ecommage_myprescription>
                <schedule><cron_expr>* * * * *</cron_expr></schedule>
                <run><model>ecommage_myprescription/observer::cronJobImportProduct</model></run>
            </ecommage_myprescription>
        </jobs>
    </crontab>
</config>
